{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuarios</h1>
    <p><a class="btn btn-primary" href="#"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> AGREGAR</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>E-mail</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
    {% endblock %}
