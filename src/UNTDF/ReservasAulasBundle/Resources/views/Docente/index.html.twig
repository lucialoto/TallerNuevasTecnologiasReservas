{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Docentes</h1>
    <p><a class="btn btn-primary" href="{{ path('docente_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> AGREGAR</a>
    </p>    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('docente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.dni }}</td>
                <td>
                    <a href="{{ path('docente_show', { 'id': entity.id }) }}">VER</a> - 
                    <a href="{{ path('docente_edit', { 'id': entity.id }) }}">BORRAR</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
