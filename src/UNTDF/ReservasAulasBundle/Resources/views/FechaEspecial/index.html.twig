{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Fechas Especiales</h1>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success flash-notice">
            <span aria-hidden="true">{{ flashMessage }}</span>
        </div>
    {% endfor %}
    <p><a class="btn btn-primary" href="{{ path('fechaespecial_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> AGREGAR</a>
    </p>    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                     
                    <a href="{{ path('fechaespecial_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> EDITAR</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
