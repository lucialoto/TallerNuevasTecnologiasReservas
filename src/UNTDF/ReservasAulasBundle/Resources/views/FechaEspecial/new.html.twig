    <script type="text/javascript">
        $('.fechareservada_input_text').datepicker({
            startDate: "{{ "now"|date('Y-m-d')}}",
            endDate: "{{ "now"|date_modify('+1 Year')|date('Y-m-d')}}",
            todayBtn: "linked",
            format: "yyyy-mm-dd",
            clearBtn: true,
            language: "es",
            orientation: "top auto",
            autoclose: true
        });
    </script>
{% endblock %}
